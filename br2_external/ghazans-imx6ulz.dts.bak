*/
};



&usdhc1 {
        compatible = "fsl,imx6ull-usdhc", "fsl,imx6sx-usdhc";
	/delete-property/ cd-gpios;
	non-removable;
	bus-width = <4>;
	no-1-8-v;
};

&usdhc2 {
        compatible = "fsl,imx6ull-usdhc", "fsl,imx6sx-usdhc";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_wilc>;
	/delete-property/ cd-gpios;
	/delete-property/ keep-power-in-suspend;
	no-1-8-v;
	broken-cd;
/*	only-1-8-v;
/*	no-1-8-v;
	broken-cd; */
	bus-width = <4>;
	non-removable;
	force-non-removable-rescan;
	max-frequency = <50000000>;
	wifi: slot@0 {
		compatible = "microchip,wilc1000", "microchip,wilc3000", "atmel,wilc_sdio";
		reset-gpios = <&gpio3 14 GPIO_ACTIVE_LOW>;
		chip_en-gpios = <&gpio3 4 GPIO_ACTIVE_HIGH>;
		irq-gpios = <&gpio3 6 GPIO_ACTIVE_LOW>;
		reg = <0>;
		bus-width = <4>;
		status = "okay";
	};
};

&usbotg1 {
        dr_mode = "peripheral";
	pinctrl-0 = <>;
/*        srp-disable;
        hnp-disable;
        adp-disable; */
        status = "okay";
};

